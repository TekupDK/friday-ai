# Friday AI - Development Environment Template
# Copy this to .env.dev and fill in your actual values

# =============================================================================
# DATABASE (DEVELOPMENT - Supabase)
# =============================================================================
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres?schema=friday_ai&sslmode=require

# =============================================================================
# AUTHENTICATION (DEVELOPMENT)
# =============================================================================
JWT_SECRET=dev-jwt-secret-change-this-minimum-32-chars-for-security
OWNER_OPEN_ID=owner-friday-ai-dev

# =============================================================================
# SERVER CONFIGURATION (DEVELOPMENT)
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# APP ID (DEVELOPMENT)
# =============================================================================
VITE_APP_ID=tekup-friday-dev

# =============================================================================
# AI MODELS (DEVELOPMENT)
# =============================================================================
# OpenRouter API Key for Gemma 3 27B Free
VITE_OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# Legacy AI keys (can be removed if not used)
OPENAI_API_KEY=sk-your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# GOOGLE WORKSPACE (DEVELOPMENT)
# =============================================================================
GOOGLE_SERVICE_ACCOUNT_KEY=./google-service-account.json
GOOGLE_IMPERSONATED_USER=info@rendetalje.dk
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com

# MCP Server URLs (DEPRECATED - MCP no longer used as of Nov 5, 2025)
# All Gmail/Calendar functionality uses direct Google API (google-api.ts)
# These variables are kept for backward compatibility only and can be omitted
# GOOGLE_MCP_URL=http://calendar-mcp:3001
# GMAIL_MCP_URL=http://gmail-mcp:3000

# =============================================================================
# BILLY.DK INTEGRATION (DEVELOPMENT)
# =============================================================================
BILLY_API_KEY=your-billy-api-key
BILLY_ORGANIZATION_ID=your-billy-organization-id

# =============================================================================
# INBOUND EMAIL (DEVELOPMENT - Phase 0)
# =============================================================================
INBOUND_EMAIL_WEBHOOK_URL=http://localhost:3000/api/inbound/email
INBOUND_EMAIL_WEBHOOK_SECRET=dev-webhook-secret-change-this
INBOUND_STORAGE_TYPE=supabase
INBOUND_STORAGE_PATH=./storage/attachments
INBOUND_STORAGE_BUCKET=emails

# =============================================================================
# REAL-TIME DOCUMENTATION SYSTEM (OPTIONAL)
# =============================================================================
# Enable documentation service (Git sync + WebSocket + AI)
DOCS_ENABLE=false

# Git repository configuration
DOCS_REPO_PATH=./
DOCS_PATH=docs
DOCS_GIT_BRANCH=main

# Auto-commit and push settings
DOCS_AUTO_COMMIT=true
DOCS_AUTO_PUSH=false

# WebSocket server port for real-time updates
DOCS_WS_PORT=3002

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=development