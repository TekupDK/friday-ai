# Friday AI - Staging Environment Configuration (Template)

# =============================================================================
# DATABASE (STAGING - Supabase/Postgres)
# =============================================================================
# Connection string for staging database (Postgres). Use a separate schema.
DATABASE_URL=postgresql://<user>:<password>@<host>:5432/<db>?schema=friday_ai_staging&sslmode=require

# =============================================================================
# AUTHENTICATION (STAGING)
# =============================================================================
# Secret used to sign JWTs in staging
JWT_SECRET=<staging-jwt-secret>
# OpenId for the owner user to seed and own CRM data in staging
OWNER_OPEN_ID=owner-friday-ai-staging

# =============================================================================
# SERVER CONFIGURATION (STAGING)
# =============================================================================
PORT=3000
NODE_ENV=staging

# =============================================================================
# APP ID (STAGING)
# =============================================================================
VITE_APP_ID=tekup-friday-staging
VITE_APP_TITLE=Friday AI Chat (Staging)
VITE_APP_LOGO=/logo.svg
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=

# =============================================================================
# AI MODELS (STAGING)
# =============================================================================
# Prefer OpenRouter in staging (or disable if not needed)
OPENROUTER_API_KEY=<staging-openrouter-key>
VITE_OPENROUTER_API_KEY=<staging-openrouter-key>
OPENROUTER_MODEL=z-ai/glm-4.5-air:free

# Optional legacy keys (if any models route via these)
OPENAI_API_KEY=<staging-openai-key>
GEMINI_API_KEY=<staging-gemini-key>

# =============================================================================
# GOOGLE WORKSPACE (STAGING)
# =============================================================================
# Use either JSON service account or split keys; choose one pattern consistently.
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"<staging-project>","private_key_id":"<id>","private_key":"-----BEGIN PRIVATE KEY-----\n<key>\n-----END PRIVATE KEY-----\n","client_email":"<sa-email>","client_id":"<client-id>","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/<sa-email>","universe_domain":"googleapis.com"}
GOOGLE_IMPERSONATED_USER=<staging-user@domain>
GOOGLE_CALENDAR_ID=<staging-calendar-id>

# =============================================================================
# BILLY.DK INTEGRATION (STAGING)
# =============================================================================
BILLY_API_KEY=<staging-billy-key>
BILLY_ORGANIZATION_ID=<staging-org-id>

# =============================================================================
# INBOUND EMAIL (STAGING - Phase 0)
# =============================================================================
INBOUND_EMAIL_WEBHOOK_URL=https://staging.friday-ai.tekup.dk/api/inbound/email
INBOUND_EMAIL_WEBHOOK_SECRET=<staging-webhook-secret>
INBOUND_STORAGE_TYPE=supabase
INBOUND_STORAGE_PATH=./storage/attachments
INBOUND_STORAGE_BUCKET=emails

# =============================================================================
# DOCS / INTERNAL TOOLS (optional in staging)
# =============================================================================
DOCS_ENABLE=false
DOCS_REPO_PATH=./
DOCS_PATH=docs
DOCS_GIT_BRANCH=main
DOCS_AUTO_COMMIT=false
DOCS_AUTO_PUSH=false
DOCS_WS_PORT=3002

# =============================================================================
# LITELLM INTEGRATION (STAGING)
# =============================================================================
ENABLE_LITELLM=false
LITELLM_MASTER_KEY=<staging-litellm-key>
LITELLM_BASE_URL=http://localhost:4000
LITELLM_ROLLOUT_PERCENTAGE=0

# =============================================================================
# LANGFUSE OBSERVABILITY (STAGING)
# =============================================================================
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=<staging-langfuse-pk>
LANGFUSE_SECRET_KEY=<staging-langfuse-sk>
LANGFUSE_BASE_URL=https://staging-langfuse.yourdomain

# =============================================================================
# CHROMADB VECTOR DATABASE (STAGING)
# =============================================================================
CHROMA_ENABLED=true
CHROMA_URL=https://staging-chroma.yourdomain
CHROMA_AUTH_TOKEN=<staging-chroma-token>

